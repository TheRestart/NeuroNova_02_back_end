# ============================================
# Django Core Settings
# ============================================
DJANGO_SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# ============================================
# Security Settings
# ============================================
ENABLE_SECURITY=False

# ============================================
# CORS Settings
# ============================================
CORS_ALLOW_ALL_ORIGINS=True
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ============================================
# Database - Main CDSS Database
# ============================================
DB_ENGINE=django.db.backends.mysql
DB_NAME=cdss_db
DB_USER=cdss_user
DB_PASSWORD=your_database_password
DB_HOST=localhost
DB_PORT=3306

# ============================================
# Database - OpenEMR (Read-only)
# ============================================
OPENEMR_DB_NAME=openemr
OPENEMR_DB_USER=openemr_readonly
OPENEMR_DB_PASSWORD=your_openemr_password
OPENEMR_DB_HOST=localhost
OPENEMR_DB_PORT=3307

# ============================================
# OpenEMR API Settings
# ============================================
OPENEMR_BASE_URL=http://localhost:80
OPENEMR_CLIENT_ID=your_client_id
OPENEMR_CLIENT_SECRET=your_client_secret

# ============================================
# Orthanc PACS Settings
# ============================================
ORTHANC_API_URL=http://localhost:8042
ORTHANC_USERNAME=orthanc
ORTHANC_PASSWORD=your_orthanc_password

# ============================================
# RabbitMQ Settings
# ============================================
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=your_rabbitmq_password

# ============================================
# AI Server Settings
# ============================================
AI_SERVER_URL=http://localhost:5000

# ============================================
# JWT Token Settings
# ============================================
JWT_ACCESS_TOKEN_HOURS=1
JWT_REFRESH_TOKEN_DAYS=7
